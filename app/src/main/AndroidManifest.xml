<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.unero.githubuser">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <permission android:name="com.unero.githubuser.READ_DATABASE" android:protectionLevel="normal" />
    <permission android:name="com.unero.githubuser.WRITE_DATABASE" android:protectionLevel="normal" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logo_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MaterialComponents.NoActionBar">
        <provider
            android:name=".provider.FavoriteProvider"
            android:authorities="com.unero.githubuser"
            android:readPermission="com.unero.githubuser.READ_DATABASE"
            android:writePermission="com.unero.githubuser.WRITE_DATABASE"
            android:enabled="true"
            android:exported="true" />

        <receiver
            android:name=".ui.fragments.setting.AlarmReceiver"
            android:enabled="true"
            android:exported="true" />

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>